<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/update_view_bg_shap</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->

    </style>
    <style name="main_radio_botton">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">bottom</item>
        <!-- 让dadiobutton不显示那个button -->
        <item name="android:button">@null</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">2dp</item>
         <!--让3个button一样大小-->
        <item name="android:layout_weight">1.0</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="main_tv_color">
        <item name="android:textColor">@color/main_tv_color</item>
         <item name="android:textSize">18sp</item>
         <item name="android:drawablePadding">8dp</item>
    </style>
    
      <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/promptbox_certain_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>